<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_res"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"

    >

    <TextView
        android:id="@+id/storage_num"
        android:layout_width="28dp"
        android:gravity="center"
        android:layout_height="60dp"
        android:paddingRight="13dp"
        android:textSize="13sp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="@+id/recycler_res"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_res"/>
    <TextView
        android:id="@+id/storage_name"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:textSize="13sp"
        android:textColor="@color/black"

        app:layout_constraintStart_toEndOf="@+id/storage_num"
        app:layout_constraintTop_toTopOf="@+id/recycler_res"/>


    <TextView
        android:id="@+id/storage_date"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:gravity="center"

        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/storage_name"
        app:layout_constraintTop_toTopOf="@+id/recycler_res" />

    <TextView
        android:id="@+id/storage_time"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/storage_date"
        app:layout_constraintTop_toTopOf="@+id/recycler_res" />

    <TextView
        android:id="@+id/storage_email"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/storage_time"
        app:layout_constraintTop_toTopOf="@id/recycler_res"/>

</androidx.constraintlayout.widget.ConstraintLayout>