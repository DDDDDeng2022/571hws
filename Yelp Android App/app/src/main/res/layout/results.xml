<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/res_bgc"
    android:id="@+id/res"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    >

    <TextView
        android:id="@+id/res_num"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="@+id/res"
        app:layout_constraintLeft_toLeftOf="@+id/res"/>

    <ImageView
        android:id="@+id/res_image"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"

        app:layout_constraintStart_toEndOf="@+id/res_num"
        app:layout_constraintTop_toTopOf="@+id/res" />

    <TextView
        android:id="@+id/res_name"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:gravity="center"

        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/res_image"
        app:layout_constraintTop_toTopOf="@+id/res" />

    <TextView
        android:id="@+id/res_rate"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/res_name"
        app:layout_constraintTop_toTopOf="@+id/res" />

    <TextView
        android:id="@+id/res_dis"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/res_rate"
        app:layout_constraintTop_toTopOf="@+id/res" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/res_bgc"
        app:layout_constraintBaseline_toBottomOf="@+id/res"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="15dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintBaseline_toBottomOf="@+id/res"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>